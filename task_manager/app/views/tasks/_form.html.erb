<%= form_for @task do |f| %>
 
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
  	<%= f.radio_button :priority, 'high', :checked => true %> 
  	<%= label :priority_high, 'Higher priority' %>
  	<%= f.radio_button :priority, 'low' %>
  	<%= label :priority_low, 'Lower priority' %>
  </p>

   <p>
    <%= f.label :due, 'Due by' %><br>
    <%= f.date_select :due %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>